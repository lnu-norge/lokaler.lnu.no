<%= modal_content_for :new_facility_review_path, @space do %>
  <%= form_for "facility_reviews", url: create_facility_review_path(@space) do |form| %>
    <% @categories.each do |category| %>
      <%= render partial: 'facility_reviews/new/facility_category',
        locals: {
          facilities_in_category: @facilities_for_categories[category.id],
          form: form,
          review: form.object,
          category: category } %>
    <% end %>
    <details>
      <summary>
        Others
      </summary>
      <% @categories.each do |category| %>
        <%= render partial: 'facility_reviews/new/facility_category',
          locals: {
            facilities_in_category: @other_facilities[category.id],
            form: form,
            review: form.object,
            category: category } %>
      <% end %>
    </details>
    <%= form.submit %>
  <% end %>
<% end %>
