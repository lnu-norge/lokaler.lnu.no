 <% unless facilities_in_category.empty? %>
  <%= tag.h3 category.title unless category.id == "1" %>
  <ul>
    <% facilities_in_category.each do |facility_review| %>
      <%= render partial: 'facility_reviews/new/facility_buttons',
                 locals: {
                   facility: facility_review,
                   facility_review: @reviews_for_categories.try(category.id.to_s).try(facility_review[:id].to_s) ||
                                    current_user.new_facility_review_for(facility_review[:id], @space),
                   form: form } %>
    <% end %>
  </ul>
<% end %>
