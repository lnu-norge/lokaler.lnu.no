<div class="mt-4 mx-4">
  <h1 class="text-2xl">Facilities</h1>

  <%= render partial: "form", locals: { facility: @facility } %>

  <div>
    <% @facilities.each do |facility| %>
      <div class="border-2 border-green-400 mt-4">
        <p>Title: <%= facility.title %></p>
        <p>SpaceId: <%= facility.space_id %></p>
        <%= link_to 'Show', facility_path(facility), class: "border-2 border-blue-400" %>
        <%= link_to 'Edit', edit_facility_path(facility), class: "border-2 border-blue-400" %>
      </div>
    <% end %>
  </div>
</div>
