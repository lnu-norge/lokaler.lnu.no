<h1>New Facility</h1>

<%= form_with model: facility do |form| %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title, class: "border-4" %>
  </div>
  <div>
    <%= form.label :space_id %>
    <%= form.text_field :space_id, class: "border-4" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
