<%#
    Locals
    - images[]
%>
<div class="splide" data-controller="slider" data-slider-target="slider">
  <div class="splide__track">
    <ul class="splide__list">
      <% images.each do |image| %>
        <% url = url_for(image)  %>
        <li class="splide__slide">
          <img data-splide-lazy="<%= url %>" />
          <noscript>
            <img src="<%= url %>" />
          </noscript>
        </li>
      <% end %>
    </ul>
  </div>
</div>
