<%# locals: (space_group: ) %>

<h1>New Space Group</h1>

<%= form_with model: space_group do |form| %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title, class: "border-4" %>
  </div>

  <h3 class="font-bold text-xl mt-4 mb-2">
    <%= form.label :how_to_book %>
  </h3>
  <%= form.rich_text_area :how_to_book %>

  <h3 class="font-bold text-xl mt-4 mb-2">
    <%= form.label :terms_and_pricing %>
  </h3>
  <%= form.rich_text_area :terms_and_pricing %>

  <h3 class="font-bold text-xl mt-4 mb-2">
    <%= form.label :about %>
  </h3>
  <%= form.rich_text_area :about %>


  <div>
    <%= form.submit %>
  </div>
<% end %>
