<div>
  <h2 class="font-bold text-xl mt-4 mb-2">
    <%= Space.human_attribute_name(field) %>
  </h2>
  <%=
    ## For when SpaceOwner has the same field, show this header:
    tag.h3 t("space_show.only_for_space", title: @space.title) if SpaceOwner.method_defined? field
  %>

  <%= form.input field, as: :rich_text_area, label: false %>
</div>

<%=
  ## For when SpaceOwner has the same field, show the field:
  if SpaceOwner.method_defined? field
    form.fields_for :space_owner do |space_owner_form| %>
    <div>
      <h3 class="font-bold text-xl mt-4 mb-2">
        <%= space_owner_form.label field,
                                   t('space_show.common_to_all_owned_by', owner_title: @space.space_owner.title) %>
      </h3>
      <%= space_owner_form.input field, as: :rich_text_area, label: false %>
    </div>
  <% end %>
<% end %>
