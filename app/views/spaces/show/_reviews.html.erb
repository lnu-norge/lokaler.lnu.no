<div id="reviews">
  <% if @space.reviews.any? %>
    <div class="flex gap-2 items-baseline justify-between">
      <h2 class="text-2xl mb-4 font-bold"><%= Review.model_name.human(count: 2).capitalize %></h2>
    </div>

    <ul class="horizontal-cards">
      <% @space.reviews.reverse.each do |review| %>
        <%= render partial: 'spaces/show/review_card', locals: {review: review}  %>
      <% end %>
    </ul>

    <%= render partial: 'spaces/show/review_link_to_new_review' %>
  <% else %>
    <h2 class="text-2xl mb-4 font-bold"><%= Review.model_name.human(count: 2).capitalize %></h2>
    <%= render partial: 'spaces/show/review_none_yet' %>
  <% end %>
</div>
