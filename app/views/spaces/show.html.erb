<%=

  # Styled in part by space.scss

%>

<!-- Space image(s) -->

<%= render partial: "spaces/show/image_header", locals: { images: @space.images } %>

<main class="space px-4">

  <%= render partial: 'spaces/show/basics' %>
  <hr />

  <%= render partial: 'spaces/show/how_to_book' %>
  <hr />

  <%= render partial: 'spaces/show/facilities' %>
  <hr />

  <%= inline_editable :who_can_use  do %>
    <%= render partial: 'spaces/show/rich_text_with_space_owner_addendum',
               locals: {
                 field: :who_can_use
               }
    %>
  <% end %>
  <hr />

  <%= inline_editable :pricing do %>
    <%= render partial: 'spaces/show/rich_text_with_space_owner_addendum',
               locals: {
                 field: :pricing
               }
    %>
  <% end %>
  <hr />

  <%= render partial: 'spaces/show/where' %>
  <hr />

  <%= inline_editable :more_info do %>
    <%= render partial: 'spaces/show/rich_text_with_space_owner_addendum',
               locals: {
                 field: :more_info
               }
    %>
  <% end %>
  <hr />

  <%= inline_editable :terms do %>
    <%= render partial: 'spaces/show/rich_text_with_space_owner_addendum',
               locals: {
                 field: :terms
               }
    %>
  <% end %>
  <hr />

  <%= render partial: 'spaces/show/reviews' %>

  <%= render partial: "space_dev_information", locals: { space: @space } %>


</main>
