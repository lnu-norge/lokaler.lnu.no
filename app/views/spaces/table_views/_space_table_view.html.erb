<%# locals: (spaces: ) %>
<table class="space_table border-collapse">
  <thead>
  <tr>
    <th scope="col">
      Lokale
    </th>

    <% if @filtered_facilities.present? %>
      <th scope="col">
        Valgte fasiliteter
      </th>
    <% end %>

    <% if @non_filtered_facilities.present? %>
      <th scope="col">
        <% if @filtered_facilities.present? %>
          Andre fasiliteter
        <% else %>
          Fasiliteter
        <% end %>
      </th>
    <% end %>

    <th scope="col">
      Bilder
    </th>
    <th scope="col">
      Hvordan booke
    </th>
    <th scope="col">
      Kontaktinfo
    </th>

    <th scope="col">
      Hvem får bruke?
    </th>
    <th scope="col">
      Pris
    </th>
    <th scope="col">
      Hvor er det?
    </th>
    <th scope="col">
      Vilkår
    </th>
    <th scope="col">
      Mer info
    </th>
    <th scope="col">
      Erfaringer
    </th>
  </tr>
  </thead>
  <tbody>
  <% spaces.each do |space| %>
    <%
      @space = space
      @space_contact = SpaceContact.new(space_id: @space.id, space_group_id: @space.space_group_id)
    %>
    <%= render partial: "spaces/table_views/space" %>
  <% end %>
  </tbody>
</table>
