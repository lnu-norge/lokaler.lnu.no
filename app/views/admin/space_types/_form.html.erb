<%= simple_form_for @space_type, url: action_name == "new" ? admin_space_types_path : admin_space_type_path do |f| %>
  <%= f.input :type_name %>
  <%= f.association :facilities, collection: Facility.all, input_html: {
    data: {
      controller: "tom-select",
      "tom-select-options-value": {
        allowEmptyOption: true
      }
    }
  } %>
  <%= f.submit %>
<% end %>
