<div class="mx-auto max-w-prose flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @sync_status %>

    <%= link_to 'Edit this sync_status', edit_admin_sync_status_path(@sync_status), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delete this sync_status', admin_sync_status_path(@sync_status), method: :delete, data: { confirm: "Are you sure you want to delete this sync_status?" }, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to sync_statuses', admin_sync_statuses_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>