<div class="mx-auto max-w-prose my-12">
  <%= link_to 'Back to sync_statuses', admin_sync_statuses_path, class: "button" %>

    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @sync_status %>

    <%= link_to 'Edit this sync_status', edit_admin_sync_status_path(@sync_status), class: "button" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delete this sync_status', admin_sync_status_path(@sync_status), method: :delete, data: { confirm: "Are you sure you want to delete this sync_status?" }, class: "link" %>
    </div>
</div>