<div class="relative bg-gray-200 shadow rounded p-2">
  <%= turbo_stream_from "paper_trail_versions" %>

  <%= turbo_frame_tag "paper_trail_versions" do %>
    <% @versions.each do |version| %>
      <%= render partial: "version", locals: {
        version: version } %>
    <% end %>
  <% end %>

  <br>
  <% unless @current_page == 1 %>
    <%= link_to :back,
      admin_history_index_path(page: @current_page.to_i - 1),
      class: "absolute right-16 bottom-0 p-2 bg-lnu-pink text-white" %>
  <% end %>

  <% unless @last_page %>
    <%= link_to :next,
      admin_history_index_path(page: @current_page.to_i + 1),
      class: "absolute right-0 bottom-0 p-2 bg-lnu-pink text-white"
    %>
  <% end %>
</div>
