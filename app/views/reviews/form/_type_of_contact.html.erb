<h3><%= t('reviews.form.have_you_been_there?') %></h3>
<div class="radio-slider horizontal flex-col">
  <% Review.type_of_contacts.keys.reverse.each do |type_of_contact| %>
    <%= form.radio_button :type_of_contact,
                          type_of_contact,
                          checked: type_of_contact == form.object.type_of_contact,
                          data: {
                            'review-form-target': 'typeOfContact'
                          }
    %>
    <%= form.label :"type_of_contact_#{type_of_contact}" do %>
      <span class="flex px-2 py-2 items-center gap-2">
      <%= t("reviews.form.have_you_been_there_answers.#{type_of_contact}") %>
      <%= inline_svg_tag Review::ICONS_FOR_TYPE_OF_CONTACT[type_of_contact], class: 'inline-block' %>
      </span>
    <% end  %>
  <% end  %>
</div>
