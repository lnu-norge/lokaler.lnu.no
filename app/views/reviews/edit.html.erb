<%= simple_form_for @review do |form| %>
  <div class="content max-w-prose mx-auto p-4 pb-10">
    <h1><%= t('reviews.form.edit_review_about_space', space_title: @review.space.title) %></h1>

    <%= render partial: "reviews/form", locals: {
      form: form
    } %>
    <%= form.submit t('reviews.save_review'), class: "button submit text-lg" %>

  </div>
<% end %>
