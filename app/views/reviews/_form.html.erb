<h1>New Review</h1>

<%= form_with model: review do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, class: "border-4" %>
  </div>
  <div>
    <%= form.label :comment %>
    <%= form.text_field :comment, class: "border-4" %>
  </div>
  <div>
    <%= form.label :price %>
    <%= form.text_field :price, class: "border-4" %>
  </div>
  <div>
    <%= form.label :star_rating %>
    <%= form.text_field :star_rating, class: "border-4" %>
  </div>
  <div>
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: "border-4" %>
  </div>
  <div>
    <%= form.label :space_id %>
    <%= form.text_field :space_id, class: "border-4" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
