<div class="mt-4 mx-4">
  <h1 class="text-2xl">Reviews</h1>

  <%= render partial: "form", locals: { review: @review } %>

  <div>
    <% @reviews.each do |review| %>
      <div class="border-2 border-green-400 mt-4">
        <h2>Title: <%= review.title %></h2>
        <p>Comment: <%= review.comment %></p>
        <p>Price: <%= review.price %></p>
        <p>Star Rating: <%= review.star_rating %></p>
        <%= link_to 'Show', review_path(review), class: "border-2 border-blue-400" %>
        <%= link_to 'Edit', edit_review_path(review), class: "border-2 border-blue-400" %>
      </div>
    <% end %>
  </div>
</div>
