<div class="content max-w-prose mx-auto p-4 pb-10">
  <h1 class="text-2xl">Mine erfaringer:</h1>
  <ul class="flex flex-wrap gap-4 mt-8">
    <% @reviews.each do |review| %>
      <li class="">
        <div class="w-64 rounded-xl shadow-lg">
          <div class="p-4 bg-gray-50">
            Erfaring om: <%= link_to review.space.title, review.space %>
            <br />Skrevet: <%= review.created_at.to_formatted_s(:short)  %>
          </div>
          <hr />

          <div class="p-4">
            <%= render partial: 'reviews/review_content', locals: {
              review: review
            } %>

          </div>
          <hr />
          <div class="p-4 bg-gray-50">
            <%= link_to 'Rediger', edit_review_path(review) %>

          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
