<% # Locals:
   # - facility (one Facility)
   # - form (Form for a new or editing Review)
   # - facility_review (a new or old facility)
%>
<%
  icon = facility.icon
  title = facility.title
%>
<li
  class="flex items-center gap-1.5">
  <%= form.fields_for "facility_#{facility.id}", facility_review do |f| %>
    <fieldset>
        <legend>
          <%= inline_svg "facilities/#{icon}" %>
          <%= title %>
        </legend>
        <%= f.radio_button :"experience", :unknown, checked: true %>
        <%= f.label :"experience_unknown", t('reviews.form.facility_experience_particular_tense.dont_know') %>
        <% FacilityReview.experiences.keys.reverse.each do |value|  %>
          <%= f.radio_button :"experience", value %>
          <%= f.label :"experience_#{value}", t("reviews.form.facility_experience_particular_tense.#{value}") %>
        <% end  %>
      </fieldset>
  <% end  %>
</li>
