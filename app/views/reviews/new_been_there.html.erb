<%= modal_content_for :new_review_path, @review.space do %>

  <%= form_with model: @review do |form| %>
    <%= form.hidden_field :space_id, value: @review.space.id %>
    <%= form.hidden_field :type_of_contact, value: :been_there %>

    <div class="content">
      <div data-controller="multistep-form">
        <h1><%= t('reviews.form.new_review_about_space', space_title: @review.space.title) %></h1>
        <%= render partial: 'shared/form_error', locals: { model: @review } %>

        <hr />

        <div data-multistep-form-target="step">
          <%= render partial: 'reviews/form/facility_reviews', locals: {
            form: form
          } %>
        </div>

        <div data-multistep-form-target="step">
          <%= render partial: 'reviews/new/star_rating', locals: {
            star_rating: @review.star_rating,
            form: form
          } %>

          <%= render partial: 'reviews/form/text_been_there', locals: {
            form: form
          } %>
        </div>

        <div data-multistep-form-target="step">
          <%= render partial: 'reviews/form/more_about_your_stay', locals: {
            form: form
          } %>
        </div>

        <%= render layout: 'reviews/new/footer' do %>
          <div class="relative h-12">
            <div class="absolute flex gap-2 top-0 right-0 z-1">
              <div
                data-multistep-form-target="previous">
                <span
                  data-action="click->multistep-form#previousStep"
                  class="modal-button">
                  Forrige
                </span>
              </div>
              <div
                data-multistep-form-target="next">
                <span
                  data-action="click->multistep-form#nextStep"
                  class="modal-button">
                  Neste
                </span>
              </div>
              <div class="hidden"
                data-multistep-form-target="save">
                <%= form.submit t('multistep_form_navigation.save'), class: "modal-button bg-blue-400" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end  %>
<% end%>
