<%= turbo_frame_tag :new_review_path do %>

  <%= simple_form_for @review do |form| %>
    <%= form.hidden_field :space_id, value: @review.space.id %>
    <%= form.hidden_field :type_of_contact, value: :been_there %>

    <div class="content">
      <div data-controller="multistep-form">
        <h1><%= t('reviews.form.new_review_about_space', space_title: @review.space.title) %></h1>
        <%= render partial: 'shared/form_error', locals: { model: @review } %>

        <hr />

        <div data-multistep-form-target="step">
          <%= render partial: 'reviews/new/star_rating', locals: {
            star_rating: @review.star_rating,
            form: form
          } %>

          <%= render partial: 'reviews/form/text_been_there', locals: {
            form: form
          } %>
        </div>

        <div data-multistep-form-target="step">
          <%= render partial: 'reviews/form/more_about_your_stay', locals: {
            form: form
          } %>
        </div>

        <%= render partial: 'reviews/multistep_footer', locals: { form: form } %>
      </div>
    </div>
  <% end  %>
<% end%>
