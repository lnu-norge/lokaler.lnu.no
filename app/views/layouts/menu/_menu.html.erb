<% if current_user %>
<div
    class="fixed bottom-0 md:top-0 md:bottom-auto w-full z-20 h-24 md:h-desktop-menu-height"
>
    <nav
      class="flex gap-2 md:gap-6 justify-between items-baseline h-full bg-white p-4 leading-none top-shadow-lg md:shadow-lg z-10">
      <div class="hidden md:block">
        <%= render partial: 'layouts/menu/logo' %>
      </div>
          <div class="grid grid-cols-5 md:flex items-baseline gap-2 md:gap-6 w-full justify-center">
          <%= render partial: 'layouts/menu/menu_item', locals: {
            path: spaces_path,
            icon: 'search',
            text: t('menu.find_spaces')
          } %>
          <%= render partial: 'layouts/menu/menu_item', locals: {
            path: personal_space_lists_path,
            icon: 'heart-outlined',
            text: t('menu.lists')
          } %>
          <%= render partial: 'layouts/menu/menu_item', locals: {
            path: new_space_path,
            icon: 'plus_circled',
            text: t('menu.new_space')
          } %>
          <%= render partial: 'layouts/menu/menu_item', locals: {
            path: page_path('other_sources'),
            icon: 'knowledge',
            text: t('menu.other_sources')
          } %>
            <%= render partial: 'layouts/menu/account_menu_item', locals: {
              path: edit_session_path,
              icon: 'account',
              text: t('menu.account')
            } %>
          </div>
          <div class="hidden lg:block text-nowrap">
            <%= render "layouts/menu/contact_us" %>
        </div>

    </nav>
  </div>


<% else %>
  <% unless current_page?(unauthenticated_root_path) %>
    <nav class="flex justify-between items-center w-full bg-white p-4 absolute top-0 ">
      <%= render partial: 'layouts/menu/logo' %>

        <div class="flex justify-around gap-6">
          <% unless current_page?(new_user_session_path) %>
            <%= link_to spaces_path, class: 'flex gap-1 items-center' do %>
              <%= inline_svg_tag 'lock' %>
              <%=  t('menu.log_in') %>
            <% end %>
          <% end %>
        </div>
    </nav>
  <% end %>
<% end %>
