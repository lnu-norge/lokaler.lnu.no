<%#

    Locals:
    - path: Path to link to
    - icon: Icon to show
    - text: Text to show

%>
<span class="text-gray-600 ">
 <%= link_to path, class: "unstyled-link  hover:text-lnu-pink inline-flex flex-col md:flex-row items-center justify-center gap-1.5 md:gap-2" do %>
  <%=
    inline_svg_tag icon, class: "inline-block w-8 h-8 md:w-6 md:h-6 #{current_page?(path) && "text-lnu-pink"}" %>
    <%= text %>
<% end %>

</span>
