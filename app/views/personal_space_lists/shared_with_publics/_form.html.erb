<%# locals: (personal_space_list:) %>

<%= turbo_frame_tag dom_id(personal_space_list, "shared_with_public") do %>
  <% if personal_space_list.shared_with_public? %>
    Delt offentlig.
    <%=
      button_to "Skru av deling", personal_space_list_shared_with_public_path(personal_space_list),
                params: { personal_space_list: { shared_with_public: false } },
                method: :put,
                class: "link"
    %>
  <% else %>
    <%=
      button_to "Del offentlig", personal_space_list_shared_with_public_path(personal_space_list),
                params: { personal_space_list: { shared_with_public: true } },
                method: :put,
                class: "link"
    %>
  <% end %>
<% end %>
