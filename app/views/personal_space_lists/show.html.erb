<%= turbo_frame_tag "spaces-open-here",
                    class: "empty:hidden border-l border-t border-gray-200 space-open-in-sidebar z-5 fixed left-[22rem] top-[7rem] right-0 h-screen-below-desktop-menu bg-white overflow-auto overscroll-contain" %>
<div
  id="<%= dom_id @personal_space_list %>"
  class=""
>
  <header class="px-4 h-[3.5rem] py-2 sticky top-0 left-0 flex gap-4 flex-wrap justify-between align-center items-center">
    <div class="flex-1">
      <%= link_to personal_space_lists_path do %>
        <span class="text text-sm">← Til alle lister</span>
      <% end %>
    </div>
    <div class="inline-flex gap-2 items-center">

        <%= link_to edit_personal_space_list_path(@personal_space_list),
                    class: "
                      edit-button edit-button--small
                      collapsable" do %>
        <h1 class="font-bold inline-block mr-2">
          <%= @personal_space_list.title %>
        </h1>
        <%= inline_svg "edit" %>
        <span class="text">
            <%= t('space_edit.edit') %>
          </span>
        <% end %>
      <div>
        <%= render "personal_space_lists/card/space_list", personal_space_list: @personal_space_list %>
      </div>
    </div>
    <div class="flex gap-2 flex-1 justify-end">
      <div class="flex gap-2 items-center">
          <span class="text text-sm">Tilhører
            <%= @personal_space_list.user.name %>
          </span>
        <div class="avatar avatar--small flex-shrink-0">
          <%= image_tag @personal_space_list.user.gravatar_url %>
        </div>
      </div>
    </div>


  </header>
  <main class="fixed
        bg-gray-100
        z-4
        overscroll-x-contain overflow-auto
        top-[7rem] left-0 right-0 bottom-0 border-t border-gray-200">
    <%= render "spaces/table_views/space_table_view",
               spaces: @personal_space_list.spaces,
               personal_space_list: @personal_space_list  %>
      <div class="border-b border-gray-200 sticky left-0 pt-4 pb-12 w-screen flex flex-col gap-2 items-center text-center bg-gray-100 z-20">
        <%= inline_svg "empty", class: "text-gray-300" %>
        <p>
          Litt tomt?<br />
          <%= link_to "Finn flere lokaler", spaces_path %>
        </p>
      </div>
  </main>

</div>
