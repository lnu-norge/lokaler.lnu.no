<div class="mt-4 mx-4">
  <h1 class="text-2xl">Space Owners</h1>

  <%= render partial: "form", locals: { space_owner: @space_owner } %>

  <div>
    <% @space_owners.each do |space_owner| %>
      <div class="border-2 border-green-400 mt-4">
        <h3><%= space_owner.title %></h3>
        <p>Orgnr: <%= space_owner.orgnr %></p>
        <h3>How to book</h3>
        <%= space_owner.how_to_book %>
        <h3>About</h3>
        <%= space_owner.about %>
        <%= link_to 'Show', space_owner_path(space_owner), class: "border-2 border-blue-400" %>
        <%= link_to 'Edit', edit_space_owner_path(space_owner), class: "border-2 border-blue-400" %>
      </div>
    <% end %>
  </div>
</div>
