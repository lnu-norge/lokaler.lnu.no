<div class="mt-4 mx-4">
  <h1 class="text-2xl">Organizations</h1>

  <%= render partial: "form", locals: { organization: @organization } %>

  <div>
    <% @organizations.each do |organization| %>
      <div class="border-2 border-green-400 mt-4">
        <p>Orgnr: <%= organization.orgnr %></p>
        <%= link_to 'Show', organization_path(organization), class: "border-2 border-blue-400" %>
        <%= link_to 'Edit', edit_organization_path(organization), class: "border-2 border-blue-400" %>
      </div>
    <% end %>
  </div>
</div>
