<%# locals: (personal_space_list_space:) %>
<% return unless personal_space_list_space %>

<%= turbo_frame_tag dom_id(personal_space_list_space, "personal_notes") do %>
  <%= render 'shared/turbo_stream_flash_on_load' %>
  <%= form_for personal_space_list_space, url: personal_space_list_space_personal_note_path(
    personal_space_list_id: personal_space_list_space.personal_space_list_id,
    space_id: personal_space_list_space.space_id,
    id: personal_space_list_space.id
  ) do |form| %>
    <fieldset class="flex flex-col gap-0 ">
      <%= form.label :personal_notes, class: "text-gray-500 mb-1 group-first/confined:text-xs" %>
      <%= form.text_area :personal_notes, class: "text_field min-h-24", data: {
        controller: "autosave-while-typing",
      } %>
      <%= form.submit t('personal_space_lists.save_notes'), class: "button submit w-fit sr-only" %>
    </fieldset>

  <% end %>
<% end %>
