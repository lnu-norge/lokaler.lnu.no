<div id="<%= "#{ dom_id(@space)}" %>-contacts" data-controller="hidden">
  <div class="flex items-center">
    <h3 class="flex-grow"><%= t('space_contacts.contacts_heading') %></h3>
  </div>
  <button type="button" data-hidden-target="open" data-action="click->hidden#toggle" class="button flex-0"><%= t('space_contacts.new_contact') %></button>
  <div data-hidden-target="hideToggle" class="hidden">
    <div data-controller="modal" data-modal-target="background" class="modal-background">
      <div class="modal modal--with-header-and-footer">
        <div class="modal-header">
          <button type="button"
                  data-modal-target="closeButton"
                  data-action="click->hidden#toggle"
                  class="hover:underline p-4 -ml-4 inline-flex content-center items-center">
            <%= inline_svg_tag 'x', class: 'inline-block' %>
            <%= t('space_contacts.close_contact') %>
          </button>
          <h3><%= t('space_contacts.new_contact') %></h3>
          <div class="w-16"></div>
        </div>
        <%= render partial: 'space_contacts/form', locals: { space_contact: @space_contact } %>
      </div>
    </div>
  </div>
  <%= turbo_stream_from "space_contacts" %>
    <%= turbo_frame_tag "space_contacts" do %>
      <%= render @space.space_contacts %>
    <% end %>
</div>
