<% content_for(:html_title) { t("devise.sessions.user.account") } %>

<div class="content max-w-md mx-auto p-4">
  <h1>
    <%= current_user.name || t('menu.account') %>
  </h1>
  <p><%= t('devise.sessions.user.logged_in_as') %> <strong><%= current_user.email %></strong></p>
  <p>
    <%= link_to t("simple_form.labels.user.signout"),
                destroy_user_session_path,
                method: :delete %>
  </p>
  <p>
    <%= link_to t("simple_form.labels.user.edit_account"),
                edit_user_registration_path %>
  </p>
  <h2>
    <%= t('session.my_content') %>
  </h2>
  <p>
    <%= link_to t('session.my_experiences'),
                reviews_path %>
  </p>
  <% if current_user.admin? %>
    <%= render "admin/menu/admin_boxed_menu" %>
  <% end %>
</div>
