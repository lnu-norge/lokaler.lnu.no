<div class="content max-w-md mt-6 mx-auto p-4 w-full">
  <h1 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
    <%= t('simple_form.labels.user.change_password') %>
  </h1>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), class: 'vertical_form', html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <div class="rounded-md shadow-sm -space-y-px">
      <div class="relative">
        <% if @minimum_password_length %>
          <p class="absolute -bottom-1.5 left-2 -mt-px inline-block px-1 text-xs font-medium text-gray-500 bg-white z-20"><%= @minimum_password_length %> <%= t("simple_form.labels.user.min_password_length") %></p>
        <% end %>
        <%= f.input :password, input_html: { class: 'passwordField z-0' }, minlength: '6', required: true %>
      </div>
      <div>
        <%= f.input :password_confirmation, input_html: { class: 'passwordField fieldLast z-10' }, required: true %>
      </div>
    </div>
    <div class="mt-4">
      <%= render partial: 'devise/shared/submit_button', locals: { text_on_button: t("simple_form.labels.user.change_password")} %>
    </div>
  <% end %>
</div>
