<div class="max-w-md w-full space-y-8">
  <div>
    <%= image_tag 'logo.svg', alt: 'LNU logo', width: 200, height: 200, class: 'mx-auto h-12 w-auto' %>
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      <%= t('devise.sessions.user.forgot_password') %>
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      <%= t('devise.registrations.user.or') %>
      <%= link_to t('devise.sessions.user.register_instead'), new_registration_path(resource_name), class: 'font-medium text-lnu-pink hover:text-lnu-blue' %>
    </p>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'mt-8 space-y-6') do |f| %>
    <div class="rounded-md shadow-sm -space-y-px">
      <div>
        <%= f.label :email, t('devise.registrations.user.email'), class: 'sr-only' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'fieldFirst textField fieldLast', placeholder: 'epost@epost.no', autofocus: true, required: true %>
      </div>
    </div>
    <div class="mt-4">
      <%= render partial: 'devise/shared/submit_button', locals: { text_on_button: t('devise.sessions.user.password_reset')} %>
    </div>
  <% end %>
  <%= render 'devise/shared/back' %>
</div>
