<div class="max-w-md w-full space-y-8">
  <div>
    <%= image_tag 'logo.svg', alt: 'LNU logo', width: 200, height: 200, class: 'mx-auto h-12 w-auto' %>
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      Glemt ditt passord
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      eller
      <%= link_to 'registrer deg her', new_registration_path(resource_name), class: 'font-medium text-lnu-pink hover:text-lnu-blue' %>
    </p>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'mt-8 space-y-6') do |f| %>
    <div class="rounded-md shadow-sm -space-y-px">
      <div>
        <%= f.label :email, 'E-post', class: 'sr-only' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'emailField fieldLast', placeholder: 'epost@epost.no', autofocus: true, required: true %>
      </div>
    </div>
    <div class="mt-4">
      <%= button_tag :submit, class: 'group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-lnu-pink hover:bg-lnu-blue focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-lnu-pink' do %>
        <span class="absolute left-0 inset-y-0 flex items-center pl-3">
          <!-- Heroicon name: solid/lock-closed -->
          <svg class="h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
          </svg>
        </span>
        Oppdater
      <% end %>
    </div>
  <% end %>
  <div class="flex items-center justify-center">
    <%= link_to "Tilbake", :back, class: 'text-lnu-pink px-4 py-2 hover:text-lnu-blue' %>
  </div>
</div>
