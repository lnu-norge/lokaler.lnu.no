<% content_for(:html_title) { t("devise.registrations.user.account") } %>

<div class="content max-w-md mt-6 mx-auto p-4 w-full">
    <div>
      <h1>
        <%= t('simple_form.labels.user.heading_new') %>
      </h1>
      <p class="mt-2 text-sm text-gray-600">
        <%=  t('simple_form.labels.user.or') %>
        <%= link_to t('simple_form.labels.user.logg_in_instead'), new_session_path(resource_name), class: 'font-medium text-lnu-pink hover:text-lnu-blue' %>
      </p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'vertical_form') do |f| %>
      <%= render partial: 'devise/shared/user_form', locals: { f: f } %>
      <div class="mt-4">
        <%= render partial: 'devise/shared/submit_button', locals: { text_on_button: t('simple_form.labels.user.submit_registration') } %>
      </div>
    <% end %>
  </div>
