<% content_for(:html_title) { t("devise.registrations.user.edit_account") } %>

<div class="max-w-md mt-6 mx-auto p-4 w-full">
  <%= render 'devise/shared/back' %>
  <header class="mb-10 mt-4">
    <h1 class="text-2xl font-semibold tracking-wide">
      <%= t('simple_form.labels.user.heading_edit') %>
    </h1>
  </header>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'flex flex-col gap-6', method: :put }) do |form| %>
    <%= render 'name_form_fields', form: %>
    <%= render 'organization_fields', form: %>
    <%= render 'email_form_field', form: form %>
    <div class="">
      <button type="submit" class="button submit">
        <%= t('simple_form.labels.user.save_edit_registration') %>
      </button>
    </div>
  <% end %>

  <div class="mt-12 p-4 bg-lnu-blue/10 rounded-lg">
    <h2 class="text-lnu-blue font-semibold tracking-wide mb-4">
      Danger zone âš¡
    </h2>
    <%= link_to registration_path(resource_name),
                data: { confirm: t('simple_form.labels.user.delete_account_confirmation') },
                method: :delete,
                class: 'inline-flex gap-1 font-medium text-lnu-pink hover:text-lnu-blue' do  %>
      <%= inline_svg_tag "delete.svg" %>
      <%= t('simple_form.labels.user.delete_account') %>
    <% end %>
  </div>
</div>
